<?xml version="1.0" encoding="UTF-8"?>
<!--
  PHPUnit конфигурация для тестов SDK МойСклад API.
  
  Тест-сьюты:
  - golden: тесты сериализации/десериализации (roundtrip)
  - smoke: тесты доступности API endpoint'ов через Prism
  
  Запуск:
    composer test              - все тесты
    composer test:golden       - только golden тесты
    composer test:smoke        - только smoke тесты
-->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.0/phpunit.xsd"
         bootstrap="bootstrap.php"
         colors="true"
         cacheDirectory=".phpunit.cache"
         displayDetailsOnTestsThatTriggerWarnings="true"
         failOnWarning="false">
    
    <testsuites>
        <!-- Golden тесты: проверка сериализации/десериализации моделей -->
        <testsuite name="golden">
            <directory>golden</directory>
        </testsuite>
        <!-- Smoke тесты: проверка доступности API endpoint'ов -->
        <testsuite name="smoke">
            <directory>smoke</directory>
        </testsuite>
    </testsuites>

    <php>
        <!-- URL Prism mock сервера для smoke тестов -->
        <env name="PRISM_BASE_URL" value="http://localhost:4010"/>
        <!-- Путь к сгенерированному SDK -->
        <env name="SDK_PATH" value="../../clients/php"/>
    </php>

    <source>
        <include>
            <directory suffix=".php">../../clients/php/lib</directory>
        </include>
    </source>
</phpunit>
